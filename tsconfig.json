{
  "include": [
    "pkg/*/lib/*.js"
  ],

  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "noEmit": true,
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "types",
    "target": "ES2021"
  },
  "typedocOptions": {
    "out": "./docs"
  }
}
